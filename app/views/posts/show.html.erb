<p>
  <strong>Title:</strong>
 <%= @post.title %>
</p>

<p>
 <strong>Post:</strong>
 <%= simple_format(@post.text) %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
 

<%= link_to '<button type="button">Edit</button>'.html_safe, edit_post_path(@post) %>
<%= link_to '<button type="button">Back</button>'.html_safe, posts_path %>
