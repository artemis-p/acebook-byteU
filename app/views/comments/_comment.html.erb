
<p>
  <strong>Commented By</strong>
  <% if current_user %>
  <%= User.find(comment.user_id).email %>
  <% end %>
</p>
 
<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<p>
  <% if current_user && ( comment.user_id == current_user.id || @post.user_id == current_user.id ) %>
  <%= link_to '<button type="button">Delete Comment</button>'.html_safe, [comment.post, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
 <% end %>
</p>
